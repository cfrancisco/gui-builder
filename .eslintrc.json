{
  "env": {
    "jest": true
  },
  "extends": "airbnb",
  "globals": {
    "window": true,
    "browser": true,
    "node": true,
    "document": true,
    "FileReader": true
  },
  "rules": {
    "react/jsx-props-no-spreading": [
      2,
      {
        "html": "enforce",
        "custom": "ignore",
        "exceptions": []
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "indent": [
      "error",
      4
    ],
    "react/jsx-indent": [
      "error",
      4
    ],
    "react/jsx-indent-props": [
      "error",
      4
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "class-methods-use-this": 0,
    "camelcase": [
      "error",
      {
        "properties": "never",
        "ignoreDestructuring": true
      }
    ],
    "no-underscore-dangle": 0
  }
}